@model Web.Models.PollingPlace
@using  Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = @Localizer["Polling Place Details"];
}

<h1>@ViewData["Title"]</h1>

<div class="panel panel-default">
    <table class="table">
        <tbody>
            <tr>
                <th class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PollingPlaceName)
                </th>
                <td class="col-sm-10">
                    @Html.DisplayFor(model => model.PollingPlaceName)
                </td>
            </tr>
            <tr>
                <th class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <td class="col-sm-10">
                    @Html.DisplayFor(model => model.Address)
                </td>
            </tr>
            <tr>
                <th class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PollingStationName)
                </th>
                <td class="col-sm-10">
                    @Html.DisplayFor(model => model.PollingStationName)
                </td>
            </tr>
            <tr>
                <th class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Latitude)
                </th>
                <td class="col-sm-10">
                    @Html.DisplayFor(model => model.Latitude)
                </td>
            </tr>
            <tr>
                <th class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Longitude)
                </th>
                <td class="col-sm-10">
                    @Html.DisplayFor(model => model.Longitude)
                </td>
            </tr>
            <tr>
                <th class="col-sm-2">
                    @Html.DisplayNameFor(model => model.AdvanceOnly)
                </th>
                <td class="col-sm-10">
                    @Html.CheckBoxFor(model => model.AdvanceOnly, new { @disabled = "disabled" })
                </td>
            </tr>
            <tr>
                <th class="col-sm-2">
                    @Html.DisplayNameFor(model => model.LocalArea)
                </th>
                <td class="col-sm-10">
                    @Html.DisplayFor(model => model.LocalArea)
                </td>
            </tr>
            <tr>
                <th class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
                <td class="col-sm-10">
                    @Html.DisplayFor(model => model.Phone)
                </td>
            </tr>
            <tr>
                <th class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <td class="col-sm-10">
                    @Html.DisplayFor(model => model.Email)
                </td>
            </tr>
            <tr>
                <th class="col-sm-2">
                    @Html.DisplayNameFor(model => model.WheelchairInfo)
                </th>
                <td class="col-sm-10">
                    @Html.DisplayFor(model => model.WheelchairInfo)
                </td>
            </tr>
            <tr>
                <th class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ParkingInfo)
                </th>
                <td class="col-sm-10">
                    @Html.DisplayFor(model => model.ParkingInfo)
                </td>
            </tr>
        </tbody>
    </table>
    <div id="polling-dates">
        <h5>@Html.DisplayNameFor(model => model.PollingPlaceDates)</h5>
        @for (int i = 0; i < Model.PollingPlaceDates.Count; i++)
        {
            <table class="table">
                <tbody>
                    <tr>
                        <th class="col-sm-2">
                            @Html.DisplayNameFor(m => m.PollingPlaceDates[i].PollingDate)
                        </th>
                        <td class="col-sm-10">
                            @Html.DisplayFor(m => m.PollingPlaceDates[i].PollingDate)
                        </td>
                    </tr>
                    <tr>
                        <th class="col-sm-2">
                            @Html.DisplayNameFor(m => m.PollingPlaceDates[i].StartTime)
                        </th>
                        <td class="col-sm-10">
                            @Html.DisplayFor(m => m.PollingPlaceDates[i].StartTime)
                        </td>
                    </tr>
                    <tr>
                        <th class="col-sm-2">
                            @Html.DisplayNameFor(m => m.PollingPlaceDates[i].EndTime)
                        </th>
                        <td class="col-sm-10">
                            @Html.DisplayFor(m => m.PollingPlaceDates[i].EndTime)
                        </td>
                    </tr>
                </tbody>
            </table>
            <hr />
        }
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.PollingPlaceId">@Localizer["Edit"]</a> |
    <a asp-action="Index">@Localizer["Back to List"]</a>
</div>
