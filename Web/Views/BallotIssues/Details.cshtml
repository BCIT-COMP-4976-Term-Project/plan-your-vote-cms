@model VotingModelLibrary.Models.BallotIssue

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="panel panel-default">
    <h4>BallotIssue</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BallotIssueTitle)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BallotIssueTitle)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Ballot Options
        </dt>
        <dd class = "col-sm-10" >
            <ul>
                @foreach (var op in Model.BallotIssueOptions)
                {
                    <li>
                        @op.IssueOptionInfo
                    </li>
                }
            </ul>
        </dd>

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.BallotIssueId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
