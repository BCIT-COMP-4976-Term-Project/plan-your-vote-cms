@model Web.Models.BallotIssue
@using  Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = @Localizer["Ballot Question Details"];
}

<h1>@ViewData["Title"]</h1>

<div class="panel panel-default">
    <table class="table">
        <tbody>
            <tr>
                <th class="col-sm-2">
                    @Html.DisplayNameFor(model => model.BallotIssueTitle)
                </th>
                <td class="col-sm-10">
                    @Html.DisplayFor(model => model.BallotIssueTitle)
                </td>
            </tr>
            <tr>
                <th class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <td class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </td>
            </tr>
            <tr>
                <th class="col-sm-2">
                    @Html.DisplayNameFor(model => model.BallotIssueOptions)
                </th>
                <td class="col-sm-10">
                    <ul>
                        @foreach (var op in Model.BallotIssueOptions)
                        {
                            <li>
                                @op.IssueOptionInfo
                            </li>
                        }
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.BallotIssueId">@Localizer["Edit"]</a> |
    <a asp-action="Index">@Localizer["Back to List"]</a>
</div>
