@model Web.Models.BallotIssue
@using  Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = @Localizer["Delete Ballot Question"];
}

<h1>@ViewData["Title"]</h1>

<h3>@Localizer["Are you sure you want to delete this ?"]</h3>
<div class="panel panel-default">
    <table class="table">
        <tbody>
            <tr>
                <th class="col-sm-2">
                    @Html.DisplayNameFor(model => model.BallotIssueTitle)
                </th>
                <td class="col-sm-10">
                    @Html.DisplayFor(model => model.BallotIssueTitle)
                </td>
            </tr>
            <tr>
                <th class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <td class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </td>
            </tr>
            <tr>
                <th class="col-sm-2">
                    @Html.DisplayNameFor(model => model.BallotIssueOptions)
                </th>
                <td class="col-sm-10">
                    <ul>
                        @foreach (var op in Model.BallotIssueOptions)
                        {
                            <li>
                                @op.IssueOptionInfo
                            </li>
                        }
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>

    <form asp-action="Delete">
        <input type="hidden" asp-for="BallotIssueId" />
        <input type="submit" value=@Localizer["Delete"] class="btn btn-danger" /> |
        <a asp-action="Index">@Localizer["Back to List"]</a>
    </form>
</div>
