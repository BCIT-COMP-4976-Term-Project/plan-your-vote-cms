@model IEnumerable<VotingModelLibrary.Models.PollingStation>
@using  Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = @Localizer["Index"];
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">@Localizer["Create New"]</a>
</p>
<table class="table panel panel-default">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Latitude)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Longitute)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AdditionalInfo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WheelchairInfo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParkingInfo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WashroomInfo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GeneralAccessInfo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Latitude)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Longitute)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdditionalInfo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WheelchairInfo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParkingInfo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WashroomInfo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GeneralAccessInfo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PollingStationId">@Localizer["Edit"]</a> |
                <a asp-action="Details" asp-route-id="@item.PollingStationId">@Localizer["Details"]</a> |
                <a asp-action="Delete" asp-route-id="@item.PollingStationId">@Localizer["Delete"]</a>
            </td>
        </tr>
        }
    </tbody>
</table>
