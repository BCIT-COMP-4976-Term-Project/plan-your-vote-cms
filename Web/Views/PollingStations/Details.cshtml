@model Web.Models.PollingStation
@using  Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = @Localizer["Details"];
}

<h1>@ViewData["Title"]</h1>

<div class="panel panel-default">
    <h4>@Localizer["PollingStation"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Latitude)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Latitude)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Longitute)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Longitute)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WheelchairInfo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WheelchairInfo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ParkingInfo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ParkingInfo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WashroomInfo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WashroomInfo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GeneralAccessInfo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GeneralAccessInfo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AdditionalInfo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AdditionalInfo)
        </dd>
    </dl>
    <div id="polling-dates">
        @Html.DisplayNameFor(model => model.PollingStationDates)
        @for(int i = 0; i < Model.PollingStationDates.Count; i++)
        {
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(m => m.PollingStationDates[i].PollingDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(m => m.PollingStationDates[i].PollingDate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(m => m.PollingStationDates[i].StartTime)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(m => m.PollingStationDates[i].StartTime)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(m => m.PollingStationDates[i].EndTime)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(m => m.PollingStationDates[i].EndTime)
                </dd>
            </dl>
        }
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.PollingStationId">@Localizer["Edit"]</a> |
    <a asp-action="Index">@Localizer["Back to List"]</a>
</div>
