@model Web.Models.Candidate
@using  Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = @Localizer["Details"];
}

<h1>@ViewData["Title"]</h1>

<div class="panel panel-default">
    <h4>@Localizer["Candidate"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Picture)
        </dt>
        <dd class="col-sm-10">
            @{
                var url = "../../" + Model.Picture;
                <img width="150" height="150" src="@url">
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Organization.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Organization.Name)
        </dd>
    </dl>
    <h4>@Html.DisplayNameFor(model => model.Details)</h4>
    <hr />
    <dl class="row">
        @foreach (var detail in Model.Details)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => detail.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => detail.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => detail.Text)
            </dt>
            <dd class="col-sm-10">
                @if (detail.Format == CandidateDetailFormat.List)
                {
                    <ul>
                        <li>@Html.DisplayFor(model => detail.Text)</li>
                    </ul>
                }
                else if (detail.Format == CandidateDetailFormat.OrderedList)
                {
                    <ol>
                        <li>@Html.DisplayFor(model => detail.Text)</li>
                    </ol>
                }
                else
                {
                    @Html.DisplayFor(model => detail.Text)
                }
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => detail.Format)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => detail.Format)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => detail.Lang)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => detail.Lang)
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.CandidateId">@Localizer["Edit"]</a> |
    <a asp-action="Index">@Localizer["Back to List"]</a>
</div>
