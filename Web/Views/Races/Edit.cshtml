@model Web.CmsControllers.RaceViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>@ViewData["Title"]</h1>

<div class="panel panel-default">
    <h4>Race</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="RaceId" />
                <div class="form-group">
                    <label asp-for="ElectionId" class="control-label"></label>
                    <select asp-for="ElectionId" class="form-control" asp-items="ViewBag.Elections"></select>
                    <span asp-validation-for="ElectionId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PositionName" class="control-label"></label>
                    <input asp-for="PositionName" class="form-control" />
                    <span asp-validation-for="PositionName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NumberNeeded" class="control-label"></label>
                    <input asp-for="NumberNeeded" class="form-control" />
                    <span asp-validation-for="NumberNeeded" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RaceCandidatesIds" class="control-label"></label>
                    <select asp-for="RaceCandidatesIds" class="form-control" asp-items="ViewBag.Candidates"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}