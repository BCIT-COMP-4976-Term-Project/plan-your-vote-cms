@model Web.Models.Race
@using  Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = @Localizer["Create"];
}

<h1>@Localizer["Create"]</h1>

<div class="panel panel-default">
    <h4>@Localizer["Race"]</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label for="ElectionId" class="control-label">@Html.DisplayNameFor(r => r.Election)</label>
                    <select asp-for="ElectionId" class="form-control" asp-items="ViewBag.Elections"></select>
                </div>
                <div class="form-group">
                    <label asp-for="PositionName" class="control-label"></label>
                    <input asp-for="PositionName" class="form-control" />
                    <span asp-validation-for="PositionName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NumberNeeded" class="control-label"></label>
                    <input asp-for="NumberNeeded" class="form-control" />
                    <span asp-validation-for="NumberNeeded" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value=@Localizer["Create"] class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index">@Localizer["Back to List"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}